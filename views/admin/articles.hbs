{{#if message}}
    <div class="message">
        <span style="color: red">{{message}}</span>
    </div>
{{/if}}
<h1>Статьи</h1>
<div><a href="/articles/add/" class="rightPanel">
    <div>
        <div class="buttonText">Создать статью</div>

        <img src="/images/add.png" alt="Создать" class="rightButton">

    </div>
</a></div>
<div id="content">
    <table width="100%">
        {{#each articles}}
            <tr>
                <td>
                    <div><a href="/articles/{{id}}">{{title}}{{created}}</a></div>
                </td>
                <td width="60px">
                    <a href="/articles/delete/{{id}}">
                        <img src="/images/delete.svg" alt="Удалить" class="rightButton">
                    </a>
                    <a href="/articles/edit/{{id}}">
                        <img src="/images/edit.png" alt="Редактировать" class="rightButton">
                    </a>
                </td>
            </tr>
        {{/each}}
    </table>

</div>

